<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    card_view:cardElevation="5dp"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/topimage"
            android:layout_width="100dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:src="@drawable/p7" />

        <TextView

            android:id="@+id/topname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="120dp"
            android:maxLines="1"
            android:text="Name"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/rs"
            android:text="Rs."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topname"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/topname"
            android:layout_marginTop="8dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/holo_green_light"
            />

        <TextView
            android:id="@+id/toprate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/topname"
            android:layout_below="@+id/topname"
            android:layout_marginTop="8dp"
            android:text="Rate"
            android:layout_marginStart="30dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/holo_green_light" />

        <ImageView
            android:id="@+id/topseller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/rs"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignEnd="@+id/topimage"
            android:layout_marginTop="8dp"
            android:src="@drawable/flipkart_long"
            android:paddingStart="115dp"
            android:layout_below="@+id/rs"
           />


    </RelativeLayout>
</android.support.v7.widget.CardView>